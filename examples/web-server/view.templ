package main

import "github.com/conneroisu/twerge"

templ MainView(title string, content string) {
	<html>
		<head>
			<title>{ title }</title>
		</head>
		<body>
			<div
				class={ twerge.Class("text-center", "bg-gray-900", "text-gray-100", "p-4") }
			>
				hello darkness my old friend
			</div>
			<p
				class="px-4 py-3 bg-gray-900 text-gray-100"
			>
				I've come to talk with you again
			</p>
			<h1>{ title }</h1>
			<p>{ content }</p>
		</body>
	</html>
}
